<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#ffa270" />
            <gradient android:angle="-90" android:endColor="#ffa270" android:startColor="#ffa270" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#c63f17" />
            <solid android:color="#c63f17" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="20dip" />
            <stroke android:width="1dip" android:color="#ffa270" />
            <gradient android:angle="-90" android:endColor="#ffa270" android:startColor="#ffa270" />
        </shape>
    </item>
</selector>